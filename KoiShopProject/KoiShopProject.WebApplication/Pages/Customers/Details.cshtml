@page
@model KoiShopProject.WebApplication.Pages.Customers.DetailsModel

<div style="min-height:30px;">
</div>
<div id ="wp-products">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 style="color : white;"><b>My Profile </b></h4>
        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Account Information</h5>
                        <small class="text-muted float-end">Thông Tin Tài Khoản</small>
                    </div>
                    <div class="card-body">

                            <div class="mb-3">
                                <label class="form-label" asp-for="Customer.CustomerName">Your Account Name :</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">
                                        <i class="bx bx-user"></i>
                                    </span>
                                    <a class="form-control">
                                        <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.Customer.CustomerName)
                                        </dd>
                                    </a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" asp-for="Customer.CustomerName">Your AccountID :</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">
                                        <i class="bx bx-user"></i>
                                    </span>
                                    <a class="form-control">
                                    <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Customer.CustomerId)
                                    </dd>
                                    </a>
                                </div>
                            </div>

                            <div class="mb-3">
                            <label class="form-label" asp-for="Customer.CustomerName">Registered phone number :</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">
                                        <i class="bx bx-user"></i>
                                    </span>
                                    <a class="form-control">
                                        <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.Customer.Phone)
                                        </dd>
                                    </a>
                                </div>
                            </div>

                            <div class="mb-3">
                            <label class="form-label" asp-for="Customer.CustomerName">Registered Address :</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">
                                        <i class="bx bx-user"></i>
                                    </span>
                                    <a class="form-control">
                                        <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.Customer.Address)
                                        </dd>
                                    </a>
                                </div>
                            </div>

                            <form method="post">
                                <a class="btn btn-danger" asp-page="./Index">Back to List </a>
                            </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>